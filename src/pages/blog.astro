---
import Layout from '../layouts/Layout.astro';
const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
---
<Layout title="Alex Bradley - Blog" description="Read the latest posts on various topics including technology, travel, and personal experiences.">
  <section class="py-16">
    <h1 class="text-4xl font-bold mb-8 text-white">Posts</h1>

    {allPosts.map((post: any) => <li><a class="text-white" href={post.url}>{post.frontmatter.title}</a></li>)}
  </section>
</Layout>
